{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": { "workPath": "backend" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": { "workPath": "frontend" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    }
  ]
}
